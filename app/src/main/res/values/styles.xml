<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/bg_gradient</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- Text Appearance -->
    <style name="AppText.Primary">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="AppText.Secondary">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- Button Style -->
    <style name="AppButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_button_blue</item>
    </style>

    <!-- Accent Button Style -->
    <style name="AppButton.Accent">
        <item name="android:background">@drawable/bg_button_green</item>
    </style>

</resources>
